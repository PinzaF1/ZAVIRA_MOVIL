<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F1FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- FOTO DE PERFIL -->
        <ImageView
            android:id="@+id/ivFotoPerfil"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_avatar"
            android:background="@drawable/circle_background"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnEditarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:contentDescription="Editar foto"
            android:backgroundTint="@color/blue_zavira"
            android:tint="@android:color/white"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil del Estudiante"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#2C3E50"
            android:paddingBottom="16dp" />

        <TextView android:id="@+id/tvNombre"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="16sp" android:layout_marginTop="8dp" />
        <TextView android:id="@+id/tvDocumento"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="16sp" />
        <TextView android:id="@+id/tvGrado"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="16sp" />
        <TextView android:id="@+id/tvCurso"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="16sp" />
        <TextView android:id="@+id/tvJornada"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="16sp" />
        <TextView android:id="@+id/tvCorreo"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#DDDDDD" />

        <!-- Sección Estilo de Aprendizaje -->
        <TextView
            android:id="@+id/tvTituloEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estilo de Aprendizaje (Kolb)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#2C3E50"
            android:layout_marginTop="16dp" />
        <TextView
            android:id="@+id/tvEstilo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estilo: -"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/tvFechaKolb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: -"
            android:textSize="14sp"
            android:textColor="#555555" />
        <TextView
            android:id="@+id/tvCaracteristicas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Características: -"
            android:textSize="15sp"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/tvRecomendaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendaciones: -"
            android:textSize="15sp"
            android:layout_marginTop="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/blue_zavira"
            android:textColor="@android:color/white"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
