<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Académico de Diagnóstico"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingBottom="8dp"/>

    <!-- Barra de bloque / área -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/btnPrevBloque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◀"/>

        <TextView
            android:id="@+id/tvBloque"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Área - Bloque 1/5"
            android:textSize="16sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnNextBloque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▶"/>
    </LinearLayout>

    <!-- Recycler -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPreguntas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Enviar -->
    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar respuestas"
        android:layout_marginTop="12dp"/>
</LinearLayout>
