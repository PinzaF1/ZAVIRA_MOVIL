<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Tarjeta Progreso Global -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:elevation="6dp"
            android:layout_marginTop="50dp"
            android:padding="25dp"
            android:background="@android:color/white"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Donut con porcentaje -->
                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/progresoCircular"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    donut_text_size="28sp"
                    donut_text_color="#000000"
                    android:layout_marginBottom="16dp"
                    donut_finished_color="#00C853"
                    donut_unfinished_color="#E0E0E0"/>

                <!-- Nivel actual con porcentaje -->
                <TextView
                    android:id="@+id/tvNivelActual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nivel actual: 65%"
                    android:textColor="#FFA000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <!-- Nombre del nivel -->
                <TextView
                    android:id="@+id/tvNombreNivel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermedio"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tarjeta Niveles -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:padding="16dp"
            android:background="@android:color/white"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Línea de Niveles"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Nivel Básico -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Bolita de color -->
                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/progress_red"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Básico"
                            android:textColor="#D32F2F"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Porcentaje encima -->
                    <TextView
                        android:id="@+id/tvPorcBasico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:paddingBottom="4dp"/>

                    <!-- Barra -->
                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/pbBasico"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:progressDrawable="@drawable/progress_red"
                        android:progress="0"/>
                </LinearLayout>

                <!-- Nivel Intermedio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/progress_orange"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Intermedio"
                            android:textColor="#FFA000"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPorcIntermedio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="#FFA000"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:paddingBottom="4dp"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/pbIntermedio"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:progressDrawable="@drawable/progress_orange"
                        android:progress="0"/>
                </LinearLayout>

                <!-- Nivel Avanzado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/progress_green"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Avanzado"
                            android:textColor="#388E3C"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPorcAvanzado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="#388E3C"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:paddingBottom="4dp"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/pbAvanzado"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:progressDrawable="@drawable/progress_green"
                        android:progress="0"/>
                </LinearLayout>

                <!-- Nivel Experto -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/progress_blue"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Experto"
                            android:textColor="#1976D2"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPorcExperto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="#1976D2"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:paddingBottom="4dp"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/pbExperto"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:progressDrawable="@drawable/progress_blue"
                        android:progress="0"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
