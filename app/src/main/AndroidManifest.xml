<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/robot"
        android:label="@string/app_name"
        android:roundIcon="@drawable/robot"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZAVIRA_MOVIL">

        <!-- Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Pantalla principal -->
        <activity android:name=".HomeActivity" android:exported="false"/>

        <!-- Login / Perfil / Resultados / Test Kolb -->
        <activity android:name=".LoginActivity" android:exported="false"/>
        <activity android:name=".ProfileActivity" android:exported="false"/>
        <activity android:name=".ResultActivity" android:exported="false"/>
        <activity android:name=".TestActivity" android:exported="false"/>

        <!-- Flujo de materias/niveles/subtemas -->
        <activity android:name=".Home.SubjectDetailActivity" android:exported="false"/>
        <activity android:name=".Home.LevelDetailActivity" android:exported="false"/>

        <!-- Quiz por subtema -->
        <activity android:name=".Home.StartQuizActivity" android:exported="false"/>
        <activity android:name=".Home.QuizActivity" android:exported="false"/>


    </application>
</manifest>
